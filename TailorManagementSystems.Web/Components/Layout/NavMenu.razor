                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Item Management
            </NavLink>
        </div>
    </nav>
</div>

@code {
    private List<MenuDTO> response;

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData() => response = await MenuServices.GetAllAsync();
}